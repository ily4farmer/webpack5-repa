{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "~assets": ["assets"],
      "~assets*": ["assets*"],
      "~models": ["models"],
      "~models*": ["models*"],
      "~components": ["components"],
      "~components*": ["components*"],
      "~constants": ["constants"],
      "~containers": ["containers"],
      "~features": ["features"],
      "~features*": ["features*"],
      "~hooks": ["hooks"],
      "~layouts": ["layouts"],
      "~locales*": ["../locales*"],
      "~schemas": ["schemas"],
      "~schemas*": ["schemas*"],
      "~shared": ["shared"],
      "~shared*": ["shared*"],
      "~selectors": ["store/selectors"],
      "~services": ["services"],
      "~services/client": ["services/client"],
      "~services/server": ["services/server"],
      "~slices": ["store/slices"],
      "~store": ["store"],
      "~adapters": ["store/adapters"],
      "~styles": ["styles"],
      "~types": ["types"],
      "~types*": ["types*"],
      "~ui": ["ui"],
      "~ui*": ["ui*"],
      "~utils": ["utils"],
      "~utils*": ["utils*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "additional.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook/*",
    "next.config.mjs"
  ]
}
